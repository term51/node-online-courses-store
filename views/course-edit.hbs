<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Name of the course</label>
        <span class="helper-text" data-error="Enter the name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="Enter the url of image"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course._id}}">
    <button type="submit" class="btn btn-primary">Edit the course</button>

</form>
<form action="/courses/remove" method="post">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course._id}}">
    <button class="btn red">Delete</button>
</form>