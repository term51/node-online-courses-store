<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Title</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button
                            class="btn btn-small js-remove"
                            data-id="{{id}}"
                            data-csrf="{{@root.csrf}}"
                        >Delete one
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
            </thead>
        </table>
        <p><strong>Price:</strong><span class="price">{{price}}</span></p>

        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Make order</button>
        </form>
    {{else}}
        <p>Cart is empty</p>
    {{/if}}
</div>